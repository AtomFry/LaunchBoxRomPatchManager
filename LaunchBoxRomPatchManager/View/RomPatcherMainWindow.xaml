<Window x:Class="LaunchBoxRomPatchManager.View.RomPatcherMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LaunchBoxRomPatchManager.View" 
        xmlns:viewModel="clr-namespace:LaunchBoxRomPatchManager.ViewModel"
        mc:Ignorable="d"
        Title="Manage rom patchers" Height="700" Width="1000" WindowStartupLocation="CenterOwner" FontSize="20" Background="Black">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Menu Grid.ColumnSpan="2" FontSize="20">
            <MenuItem Header="Create">
                <MenuItem Header="New rom patcher" Command="{Binding CreateNewRomPatcherCommand}"/>
            </MenuItem>
        </Menu>
        <local:RomPatcherNavigationView Grid.Row="1" Grid.Column="0" DataContext="{Binding RomPatcherNavigationViewModel}"/>
        <local:PatcherEditView Grid.Row="1" Grid.Column="1" DataContext="{Binding RomPatcherDetailViewModel}"/>
    </Grid>
</Window>
